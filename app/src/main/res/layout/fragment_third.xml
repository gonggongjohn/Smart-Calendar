<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.ThirdFragment">

    <LinearLayout
            android:id="@+id/line_my"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:id="@+id/btn_my_1"
            android:text="支付"
            android:drawableLeft="@drawable/settings_24"
            android:drawablePadding="8dp"
            android:paddingLeft="8dp"
            android:drawableRight="@drawable/forward_ios_24"
            android:paddingRight="8dp"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/line_my"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

    <Button
            android:id="@+id/btn_my_2"
            android:text="收藏"
            android:drawableLeft="@drawable/settings_24"
            android:drawablePadding="8dp"
            android:paddingLeft="8dp"
            android:drawableRight="@drawable/forward_ios_24"
            android:paddingRight="8dp"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_my_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

    <Button
            android:id="@+id/btn_my_3"
            android:text="朋友圈"
            android:drawableLeft="@drawable/settings_24"
            android:drawablePadding="8dp"
            android:paddingLeft="8dp"
            android:drawableRight="@drawable/forward_ios_24"
            android:paddingRight="8dp"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_my_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

    <Button
            android:id="@+id/btn_my_4"
            android:text="卡包"
            android:drawableLeft="@drawable/settings_24"
            android:drawablePadding="8dp"
            android:paddingLeft="8dp"
            android:drawableRight="@drawable/forward_ios_24"
            android:paddingRight="8dp"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_my_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

    <Button
            android:id="@+id/btn_my_5"
            android:text="表情"
            android:drawableLeft="@drawable/settings_24"
            android:drawablePadding="8dp"
            android:paddingLeft="8dp"
            android:drawableRight="@drawable/forward_ios_24"
            android:paddingRight="8dp"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_my_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

    <Button
            android:id="@+id/btn_my_6"
            android:text="设置"
            android:drawableLeft="@drawable/settings_24"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/forward_ios_24"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_my_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>